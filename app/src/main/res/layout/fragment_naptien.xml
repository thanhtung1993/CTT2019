<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorBlue1" >
            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:layout_gravity="center" />
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="60dp"
        >
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thanh toán cước truyền hình MobiTV"
            android:textColor="@color/colorBlue"
            android:textSize="@dimen/textsize20dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:hint="Mã khách hàng (mã thẻ) "
            android:layout_marginTop="15dp"
            android:background="@drawable/custom_edt"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số tiền :"
                android:textSize="@dimen/textsize20dp"
                android:textColor="@color/colorText"
                android:layout_marginTop="14dp"/>

            <EditText
                android:hint="100.000"
                android:layout_width="148dp"
                android:layout_height="35dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="9dp"
                android:background="@drawable/custom_edt"
                />
        </LinearLayout>
        <Button
            android:id="@+id/btnThanhToan"
            android:text="Thanh toán"

            android:layout_width="140dp"
            android:layout_height="30dp"
            android:textSize="12dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_button"
            android:drawableLeft="@drawable/muiten"/>
        
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thanh toán cước truyền hình K+"
            android:textSize="@dimen/textsize20dp"
            android:textColor="@color/colorBlue"
            android:layout_marginTop="39dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:hint="Mã khách hàng (mã thẻ) "
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_edt"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">
            <TextView
                android:text="@string/GoiCuoc"
                android:layout_width="70dp"
                android:textColor="@color/colorText"
                android:layout_height="@dimen/textsize20dp"
                android:layout_marginTop="18dp"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/custom_spinner"
               />

        </LinearLayout>

        <Button
            android:id="@+id/btnDangKy"
            android:text="Đăng ký "
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:textSize="12dp"
            android:textColor="@color/colorText"
            android:layout_marginTop="13dp"
            android:background="@drawable/custom_button"
            android:drawableLeft="@drawable/muiten"/>
        
        
        <TextView
            android:text="Nạp tiền cho game :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlue"
            android:textSize="@dimen/textsize20dp"
            android:layout_marginTop="61dp"/>

        <Button
            android:id="@+id/btnTiepTheo"
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_button"
            android:text="Tiếp theo"
            android:textColor="@color/colorText"
            android:drawableLeft="@drawable/muiten"
            android:textSize="12dp" />




    </LinearLayout>






</FrameLayout>